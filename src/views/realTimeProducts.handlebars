<div class="container">
  <h1 class="title">Lista de Productos (Tiempo Real con WebSockets)</h1>

  <form id="productForm" class="form">
      <h2>Agregar Producto</h2>
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" required>
      <label for="price">Precio:</label>
      <input type="number" id="price" name="price" required>
      <label for="description">Descripción:</label>
      <input type="text" id="description" name="description">
      <input type="submit" value="Agregar Producto" class="btn agregar">
  </form>

  <form id="deleteForm" class="form">
      <h2>Eliminar Producto</h2>
      <label for="productId">ID a eliminar:</label>
      <input type="number" id="productId" name="productId" required>
      <input type="submit" value="Eliminar Producto" class="btn eliminar">
  </form>

  <ul id="productList" class="product-list">
    {{#if products}}
      {{#each products}}
        <li class="product-item">
          <span class="product-id">ID: {{this.id}}</span>
          <span class="product-name">{{this.name}}</span>
          <span class="product-price">${{this.price}}</span>
          <span class="product-description">{{this.description}}</span>
        </li>
      {{/each}}
    {{else}}
      <li>No hay productos disponibles.</li>
    {{/if}}
  </ul>
  <a href="/" class="link">Volver a Vista Estática</a>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>